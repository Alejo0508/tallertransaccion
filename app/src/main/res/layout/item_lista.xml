<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e0f7fa">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="5dp"
        android:layout_marginTop="2dp"
        android:elevation="2dp"
        app:cardBackgroundColor="#e0f7fa"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:textColor="#424242"
                >

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="numero de transaccion: "
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#424242"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cuenta de origen: "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="#424242"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="cuenta de destino: "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="#424242"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hora: "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="#424242"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fecha: "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="#424242"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valor: "
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="#424242"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/etnrotransac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="numero de transaccion: " />

                <TextView
                    android:id="@+id/etnrocuentaorigen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="cuenta de origen: " />

                <TextView
                    android:id="@+id/etnrocuentadestino"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="cuenta de destino: " />

                <TextView
                    android:id="@+id/etnhora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="hora: " />

                <TextView
                    android:id="@+id/etnfecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="fecha: " />

                <TextView
                    android:id="@+id/etnvalor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Valor: " />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e0f7fa"
            android:layout_marginTop="10dp"
            />

    </androidx.cardview.widget.CardView>

</RelativeLayout>